units       real
dimension   3
boundary    p p p
atom_style  full

bond_style  harmonic
pair_style  ljlambda $debye 0.0 35.0
dielectric  80.0

read_data   data.data

bond_coeff          1     9.600     3.8

$pair_coeff

special_bonds fene
neighbor  3.5 multi
neigh_modify  every 10 delay 0

comm_style    tiled
timestep      $dt

velocity      all create $temp $v_seed
fix           fxnve  all nve
fix           fxlange all langevin $temp $temp $langevin_damp $langevin_seed

compute rg all gyration

thermo        $save
thermo_style  custom step pe ke temp c_rg
thermo_modify flush yes

dump          xtc_file all xtc $save xtc_traj.xtc
dump_modify   xtc_file unwrap no

dump          atom_file all atom $save atom_traj.lammpstrj
dump_modify   atom_file flush yes

dump          dcd_file all dcd $save dcd_traj.dcd
dump_modify   dcd_file flush yes

restart $restart rst.1 rst.2
run           $t
