units       real
dimension   3
boundary    p p p
atom_style  full

bond_style  harmonic
pair_style  ljlambda $debye 0.0 35.0
dielectric  $water_perm

read_data   data.data

bond_coeff          1     9.600     3.8

$pair_coeff

special_bonds fene
neighbor  3.5 multi
neigh_modify  every 10 delay 0

comm_style    tiled
timestep      $dt

velocity      all create $temp $v_seed
fix           fxnve  all nve
fix           fxlange all langevin $temp $temp $langevin_damp $langevin_seed

compute rg all gyration

thermo        $save
thermo_style  custom step pe ke temp c_rg
thermo_modify flush yes

#rerun           $rerun_dump start $rerun_start skip $rerun_skip dump x y z
rerun           $rerun_dump first $rerun_start last $rerun_stop skip $rerun_skip dump x y z
#rerun           $rerun_dump last 100000 dump x y z
