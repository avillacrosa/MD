units       real
dimension   3
boundary    p p p
atom_style  full

bond_style  harmonic
pair_style  ljlambda $debye 0.0 35.0
dielectric  $water_perm

read_restart rst.1

special_bonds fene
neighbor  3.5 multi
neigh_modify  every 10 delay 0

comm_style    tiled
timestep      $dt

velocity      all create $temp $v_seed
fix           fxnve  all nve
fix           fxlange all langevin $temp $temp $save $langevin_seed

compute rg all gyration

thermo        $save
thermo_style  custom step pe ke temp c_rg
thermo_modify flush yes

dump          atom_file all atom $save atom_traj.lammpstrj
dump_modify   atom_file flush yes append yes

dump          dcd_file all dcd $save dcd_traj.dcd
dump_modify   dcd_file flush yes unwrap yes

restart $restart rst.1 rst.2
run           $t
