units       real
dimension   3
boundary    p p p
atom_style  full

bond_style  harmonic
pair_style  ljlambda $debye 0.0 35.0
dielectric  $water_perm

read_restart rst.1

special_bonds fene
neighbor  3.5 multi
neigh_modify  every 10 delay 0

comm_style    tiled
timestep      $dt

variable T world $temperatures
variable r world $replicas


velocity      all create $T $v_seed
fix           fxnve  all nve
fix           fxlange all langevin $T $T 10000 $langevin_seed

compute rg all gyration

thermo        $save
thermo_style  custom step pe ke temp c_rg
thermo_modify flush yes

dump          xtc_file all xtc $save xtc_traj_$r.xtc
dump_modify   xtc_file unwrap yes

dump          atom_file all atom $save atom_traj_$r.lammpstrj
dump_modify   atom_file flush yes

dump          dcd_file all dcd $save dcd_traj_$r.dcd
dump_modify   dcd_file flush yes

restart $restart rst.1 rst.2
temper  $t  $swap_every  $T fxlange $v_seed $langevin_seed
