units       real
dimension   3
boundary    p p p
atom_style  full

bond_style  harmonic
pair_style  ljlambda 0.1 0.0 35.0
dielectric  80.0

read_data   hps.data

bond_coeff          1     9.600     3.8

$pair_coeff

special_bonds fene
neighbor  3.5 multi
neigh_modify  every 10 delay 0

comm_style    tiled
timestep      10.0

variable t world 150.0 170.0 192.5 217.5 247.5 280.0 320.0 362.5 410.0 467.5 530.0 600.0

velocity      all create $t $v_seed
fix           fxnve  all nve
fix           fxlange all langevin $t $t 10000 $langevin_seed

compute rg all gyration

thermo        5000
thermo_style  custom step pe ke temp c_rg
thermo_modify flush yes

dump          VMD1 all xtc 5000 hps_traj.xtc
dump_modify   VMD1 unwrap yes
dump          new_dump all atom 5000 hps_traj.atom

temper  100000000  100000  $t fxlange 1234 12345
